<table><thead>
   <tr>
     <td>
         <a href="/" class="btn btn-success">ThermMonitor</a>
      </td>
   </tr>
  <tr>
      <td>
         <a href="https://www.facebook.com/ThermMonitor" class="btn btn-warning">Facebook</a>
      </td>
      <td>
         <a href="https://www.twitter.com/ThermMonitor" class="btn btn-warning">Twitter</a>
