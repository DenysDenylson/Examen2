<h1 >Admin view</h1>
<td><h1><span class="label label-success">USERS</span></h1></td>
    <br>
<table class="table table-striped"><thead>
    <tr class="info">
    <td><b>#</b></td>
    <th></th>
    <td><b>Email</b></td>
    <td><b>Role</b></td>
    <td><b>Created At</b></td>
    <td><b>Updated At</b></td>
    <td><b>State</b></td>
    <td><b>Options</b></td>

      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <tr>
    <% @users.each do |user| %>
    <% if user.id != 1 %>
    <tr>
        <td><%= user.id %></td><td>
        <td><%= user.email %></td> 
        <td><%= user.role%></td> 
        <td><%= user.created_at %></td>
        <td><%= user.updated_at %></td>
        <td><h5><a href= "/admi/user/block/<%=user.id %>"class="btn btn-danger">Block</a></h5></td>
        <td><h5><a href= "/admi/user/unlock/<%=user.id %>"class="btn btn-default">Unlock</a></h5></td>
        <td><h5><a href= "/admi/user/change_role/<%=user.id %>"class="btn btn-warning">Rol</h5></a></td>        
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<h1><span class="label label-danger">THERMS</span></h1>
<br>
<table class="table table-striped"><thead>
    <tr class="info">
    <td><b>#User</b></td>
    <td><b>Serial</b></td>
    <td><b>Temperature</b> </td>
    <td><b>Humidity</b> </td>
    <td><b>Energy</b></td>
    <td><b>Address</b></td>
    <td><b>Options</b></td>

      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @thermostats.each do |thermostat| %>
      <tr>
        <td><%= thermostat.user_id %></td>
        <td><%= thermostat.serial %></td>
        <td><%= thermostat.temperature %></td>
        <td><%= thermostat.humidity %></td>
        <td><%= thermostat.energy %></td>
        <td><%= thermostat.address %></td>
        <td><a href="/thermostats/<%= thermostat.id %>" class="btn btn-default">Show</a></td>
        <td><a href="<%= edit_thermostat_path(thermostat) %>" class="btn btn-default">Editar</a></td>
        <td><a href="/thermostats/destroy/<%= thermostat.id %>" class="btn btn-danger">Delete</a></td>
        
        <% end %>
      </tr>
  </tbody>
</table>
